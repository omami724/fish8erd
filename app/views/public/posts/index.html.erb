<h3>fish index</h3>

<table class='table'>
  <thead>
    <tr>
      <th colspan="3">
      </th>
    </tr>
  </thead>
  
  <tbody>
   <% @posts.each do |fish| %>    
      <tr>
      <td><%= fish.title %></td>
      <td><%= fish.text %></td>
      <td><%= image_tag fish.image, size:'100x100'%></td>
      </tr>
   <% end %>
   </tbody>
  
  
</table>
    

  <%= paginate @posts %>