<div class="col-md-8 offset-md-2">
  <div class="py-4">
  <h3>user一覧</h3>
</div>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
          <th colspan="4"></th>
        </tr>
        
      <tbody>
        <% @user.each do |user| %>
          <tr>
            <td>
              <%= user.id %>
            </td>
            <td>
              <%= link_to admin_users_path(user.id) do %>
                <%= user.username %>
              <% end %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <% if user.is_deleted == true %>
                <p class="text-secondary">退会</p>
              <% else %>
                <p class="text-success">有効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
       </tbody>
      </thead>
    </table>